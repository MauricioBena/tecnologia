// C++ code
//
int i=0;
int n;
void setup()
{
  pinMode(1, OUTPUT);
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
}

void loop()
{
  for(i=0 ;i<7 ;i++){
    digitalWrite(i, HIGH);
    delay(1000);
  }
  for(i=6 ;i>0 ;i--){
    digitalWrite(i, LOW);
    delay(1000);
  }}